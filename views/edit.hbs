{{#unless erro}}
<div class="container">
    <nav class="bg-body-tertiary p-5 rounded mt-3">
        <h1>Editar</h1>
        <form action="/update" method="post">
            <div class="row mt-5">
                <div class="col-md-5 mb-3">
                    <label for="nome" class="form-label">Nome</label>
                    <input type="hidden" name="id" value="{{id}}">
                    <input value="{{nome}}" type="text" class="form-control" id="nome" name="nome"
                        placeholder="Digite seu nome">
                </div>
                <div class="col-md-5 mb-3">
                    <label for="email" class="form-label">Email address</label>
                    <input value="{{email}}" type="email" class="form-control" id="email" name="email"
                        placeholder="Digite seu email">
                </div>
                <div class="col-md-2">
                    <button class="btn btn-warning w-100 mt-3 p-3">Salvar Alterações</button>
                </div>
        </form>
</div>
</nav>
</div>
{{else}}
<div class="container">
    <div class="card bg-danger text-white mt-3 p-2">
        <div class="card-body text-center">
            Houve um problema: {{problema}}
        </div>
    </div>
</div>
{{/unless}}